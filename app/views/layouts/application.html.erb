<!DOCTYPE html>
<html>
<head>
  <title>ChessMaster - <%= yield(:page_title) %></title>
  <%= favicon_link_tag 'logos/favicon.png' %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container header-container">
      <div class="navbar-header">
        <% if user_signed_in? %>
          <%= link_to "Chessmaster Logo", games_path, class: "navbar-brand full-logo text-hide" %>
        <% else %>
          <%= link_to "Chessmaster Logo", root_path, class: "navbar-brand full-logo text-hide" %>
        <% end %>
      </div>
      <div class="navbar-avatar-container pull-right" id="mainSideNavTrigger">
        <div class="avatar navbar-avatar">
        </div>
      </div>
    </div>
  </nav>


  <div class="container main-container">
      <div id="mainSideNav" class="main-sidenav">
        <ul class="main-sidenav-links">
          <li>
            <%= link_to '#' do %>
              <div class="main-sidenav-text main-sidenav-logout">
                <i class="logout"></i><span>Logout</span>
              </div>
            <% end %>
          </li>
          <li>
            <%= link_to '#' do %>
              <div class="main-sidenav-text main-sidenav-profile">
                <i class="avatar  main-sidenav-profile-icon"></i><span>Profile</span>
              </div>
            <% end %>
          </li>
          <li>
            <%= link_to page_path(:the_team) do %>
              <div class="main-sidenav-text main-sidenav-contact">
                <i class="contact"></i><span>Contact</span>
              </div>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="container-fluid" id="mainContentContainer">
        <% if notice.present? %>
          <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
  <footer class="footer">
    <div class="container footer-container">
      <ul class="footer-links">
        <li>&copy 2016</li>
      </li><%= link_to 'Meet the Team', page_path(:the_team) %></li>
      </ul>
    </div>
  </footer>

<%= render partial: 'sign_up' %>
<%= render partial: 'login' %>

</body>
</html>
