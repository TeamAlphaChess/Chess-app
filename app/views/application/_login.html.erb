<!-- Login Modal -->
<div id="loginModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Login</h4>
        <button type="button" class="close-icon modal-close" data-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email' %>
            <%= f.input :password, required: true, label: false, placeholder: 'Password' %>
          </div>
      </div>
      <div class="modal-footer">
          <%= f.submit 'Submit', class: 'btn btn-default'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
